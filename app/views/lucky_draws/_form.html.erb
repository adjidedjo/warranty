<!-- START panel-->
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
        Claim Your Lucky Draw.
      </div>
      <div class="panel-body">
        <%= form_for(@lucky_draw, {:class => "form-horizontal"}) do |f| %>
        <%= f.hidden_field :store_id, value: params[:template_id] %>
        <fieldset>
          <div class="form-group has-feedback">
            <label class="col-sm-2 control-label">Nama:</label>
            <div class="col-sm-3">
              <%= f.text_field :nama, class: "form-control", required: "required" %>
            </div>
            <label class="col-sm-2 control-label">Alamat:</label>
            <div class="col-sm-4">
              <%= f.text_field :alamat, class: "form-control", required: "required" %>
            </div>
          </div>
        </fieldset>

        <fieldset>
          <div class="form-group has-feedback">
            <label class="col-sm-2 control-label">No Telepon:</label>
            <div class="col-sm-3">
              <%= f.text_field :notelpon, class: "form-control", required: "required" %>
            </div>
            <label class="col-sm-2 control-label">Email:</label>
            <div id="registration_zip_code" class="col-sm-4">
              <%= f.text_field :email, class: "form-control", onkeydown: "validate(this.value)", required: "required" %>
            </div>
          </div>
        </fieldset>

        <fieldset>
          <div class="form-group has-feedback">
            <label class="col-sm-2 control-label">Harga Pembelian:</label>
            <div class="col-sm-3">
              <%= f.text_field :harga, class: "form-control", required: "required", data: {"data-parsley-equalto" => "number"} %>
            </div>
          </div>
        </fieldset>
        
        <fieldset>
          <div class="custom-file has-feedback">
            <label class="col-sm-2 control-label">Upload Nota Pembelian:</label>
            <div class="col-sm-4">
              <%= f.file_field :faktur, class: "custom-file-input", required: "required" %>
            </div>
          </div>
        </fieldset>
        
        <fieldset>
          <div class="form-group has-feedback">
            <label class="col-sm-2 control-label">Password:</label>
            <div class="col-sm-3">
              <%= f.password_field :password, class: "form-control", required: "required" %>
            </div>
          </div>
        </fieldset>
        
        <button type="submit" class="btn btn-block btn-primary mt-lg">
          CLAIM
        </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- END panel-->
<!-- </div> -->

<script>
var ev = /^([_a-zA-Z0-9-]+)(\.[_a-zA-Z0-9-]+)*@([a-zA-Z0-9-]+\.)+([a-zA-Z]{2,3})$/;
var x = document.getElementById("check");
function validate(email){
    if(!ev.test(email))
        {
            x.innerHTML = "Not a valid email";
            x.style.color = "red"
        }
    else
        {
            x.innerHTML = "Looks good!";
            x.style.color = "green"
        }
    }
</script>