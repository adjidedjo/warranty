<!-- START dashboard main content-->
<div class="panel panel-info">
  <div class="panel-heading">
    LIST PEMENANG VOUCHERS
  </div>
  <div class="panel-body">
    <table id="productivities" class="table table-striped table-hover">
      <thead>
        <tr>
          <th>NAMA</th>
          <th>EMAIL</th>
          <th>KODE VOUCHER</th>
          <th>SERIAL</th>
          <th>CODE</th>
          <th>DESC</th>
          <th>VOUCHER</th>
          <th>TRAVELOKA</th>
          <th>VERIFIKASI</th>
          <th>Kirim Email?</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tfoot></tfoot>
      <tbody>
        <% @lucky_draws.each do |ld| %>
        <tr>
          <td style="text-align: left"><%= ld.nama %></td>
          <td style="text-align: left"><%= ld.email %></td>
          <td style="text-align: left"><%= ld.voucher_royal %></td>
          <td style="text-align: left"><%= ld.serial %></td>
          <td style="text-align: left"><%= ld.kode_barang %></td>
          <td style="text-align: left"><%= ld.nama_barang %></td>
          <td style="text-align: left"><%= currency(ld.nilai_voucher) %></td>
          <td style="text-align: left"><%= currency(ld.nilai_voucher_traveloka) %></td>
          <td style="text-align: left"><%= ld.verifikasi? ? "Sudah" : "Belum" %></td>
          <td style="text-align: left"><%= ld.terkirim? ? "Sudah" : "Belum" %></td>
          <td><%= link_to 'Download', lucky_draw_path(ld.id, format: :pdf), class: "mb-sm btn-xs btn btn-primary btn-outline" %></td>
          <td><%= link_to 'Edit', edit_lucky_draw_path(ld.id), class: "mb-sm btn-xs btn btn-primary btn-outline" %></td>
          <td><%= link_to 'Hapus', lucky_draw_path(ld.id), method: :delete, data: { confirm: "Yakin?"}, class: "mb-sm btn-xs btn btn-danger btn-outline" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer"></div>
</div>
<td><%= link_to 'BUAT BARU', new_lucky_draw_path, class: "mb-sm btn-xs btn btn-primary btn-outline" %></td>